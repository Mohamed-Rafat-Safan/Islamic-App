<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyIslamicApp" parent="Theme.MaterialComponents.Light.NoActionBar.Bridge">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/status_bar</item>
        <!-- Customize your theme here. -->


        <!-- to change text in option menu-->
        <item name="android:itemTextAppearance">@style/menu_text_style</item>
        <!--  change background in menu-->
        <item name="android:itemBackground">@color/white</item>

        <!--         hide scrollview stick from fragment-->
        <item name="android:scrollbarThumbVertical">@null</item>
    </style>

    <style name="NavigationDrawerStyle">
        <item name="android:textSize">20sp</item><!-- text size in menu-->
    </style>

    <!--     change text size for item menu only in Navigation Drawer-->
    <style name="NewFontStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/medium</item>
    </style>


    <style name="menu_text_style" parent="@android:style/TextAppearance.DeviceDefault.Widget.ActionBar.Menu">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/menu_color</item>
        <item name="fontFamily">@font/medium</item>
        <item name="android:textAllCaps">false</item>
    </style>


    <style name="CustomTextAppearanceTab" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">18sp</item>
        <item name="fontFamily">@font/medium</item>
    </style>


    <style name="NumberPickerStyle">
        <item name="colorControlNormal">@color/status_bar</item>
        <item name="android:fontFamily">@font/medium</item>
        <item name="android:textColorPrimary">#898121</item>
    </style>


    <style name="CustomText" parent="TextAppearance.AppCompat">
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">22sp</item>
        <item name="fontFamily">@font/medium</item>
    </style>



    <style name="BottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bg_bottom_sheet</item>
    </style>
    <style name="BottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheetStyle</item>
    </style>

</resources>